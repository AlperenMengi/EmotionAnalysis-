<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".Views.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="174dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/cikisbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/depressionButton"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_btn"
            android:onClick="depressionTest"
            android:text="Depresyon Testi"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/hopelessButton2"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_btn"
            android:onClick="hopelessTest"
            android:text="Umutsuzluk Testi"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/rosenbergD1Button"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_btn"
            android:onClick="rosenbergD1Test"
            android:text="Benlik Saygısı Testi"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/rosenbergD7Button"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_btn"
            android:onClick="rosenbergD7Test"
            android:text="Psikosomatik Belirtiler Testi"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/anxietyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_btn"
            android:onClick="anxietyTest"
            android:text="Anksiyete Testi"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/wellbeingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_btn"
            android:onClick="wellbeingTest"
            android:text="Mental İyi Oluş Testi"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="Duygu Analizi Testi"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cikisbutton"
        android:layout_width="96dp"
        android:layout_height="39dp"
        android:layout_marginBottom="20dp"
        android:background="@color/black"
        android:onClick="quit"
        android:text="Çıkış"
        android:textColor="@color/white"
        android:textSize="17sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textEvaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:onClick="evaluateScreen"
        android:text="Testleri çözdükten sonra değerlendirmek için Tıklayınız..!"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/cikisbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>